<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/materialcat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context="cakart.cakart.in.syllabus.syllabus.ICAIstudyMaterialFragment">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
       android:background="@color/colorPrimary"
        android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center"
               android:orientation="vertical">

               <ImageView
                   android:layout_width="200dp"
                   android:id="@+id/ca_foundation_studymaterial"
                   android:layout_height="200dp"
                   android:background="#ffffcc"
                   android:src="@drawable/cafoundation" />


                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:padding="40dp"
                    android:background="#ffffcc"
                    android:id="@+id/ca_cpt_studymaterial"
                    android:src="@drawable/cacpt" />

    </LinearLayout>
   </LinearLayout>
</ScrollView>

</RelativeLayout>
